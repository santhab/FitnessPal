<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:text="@string/lblFoodName" />

        <EditText
            android:id="@+id/etFoodName"
            android:width="200dp"
            />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:text="@string/lblFoodCalorie" />

        <EditText
            android:id="@+id/etFoodCalorie"
            android:width="200dp"
            android:inputType="numberDecimal"
            />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:text="@string/lblFoodProtein" />

        <EditText
            android:id="@+id/etFoodProtein"
            android:width="200dp"
            android:inputType="numberDecimal"
            />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:text="@string/lblFoodCarb" />

        <EditText
            android:id="@+id/etFoodCarb"
            android:width="200dp"
            android:inputType="numberDecimal"
            />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:text="@string/lblFoodFat" />

        <EditText
            android:id="@+id/etFoodFat"
            android:width="200dp"
            android:inputType="numberDecimal"
            />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnCreateFood"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:text="@string/btnOk" />

        <Button
            android:id="@+id/btnCancelCreateFood"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="@string/btnCancel" />

    </TableRow>

</TableLayout>